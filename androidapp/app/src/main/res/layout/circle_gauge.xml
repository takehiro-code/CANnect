<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:gauge="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/App_background">


    <de.nitri.gauge.Gauge
        android:id="@+id/gauge"
        android:layout_width="172dp"
        android:layout_height="195dp"

        android:layout_marginBottom="264dp"
        gauge:faceColor="@color/Black"
        gauge:initialValue="0"
        gauge:layout_constraintBottom_toBottomOf="parent"
        gauge:layout_constraintEnd_toEndOf="@+id/vehicle_speed"
        gauge:layout_constraintStart_toStartOf="@+id/vehicle_speed"
        gauge:maxValue="200"
        gauge:minValue="0"
        gauge:needleColor="@color/Green"
        gauge:scaleColor="@color/Red"
        gauge:valuePerNick="2" />

    <TextView
        android:id="@+id/vehicle_speed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:text="@string/car_speed"
        android:textColor="#FFFFFF"
        android:textSize="34sp"
        gauge:layout_constraintBottom_toTopOf="@+id/gauge"
        gauge:layout_constraintEnd_toEndOf="parent"
        gauge:layout_constraintStart_toStartOf="parent"></TextView>
</androidx.constraintlayout.widget.ConstraintLayout>